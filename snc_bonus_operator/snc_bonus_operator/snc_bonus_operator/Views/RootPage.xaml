<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="snc_bonus_operator.RootPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:snc_bonus_operator"
    BackgroundColor="{DynamicResource MainColor}"
    DisabledColor="{DynamicResource BackgroundColors}"
    ForegroundColor="{DynamicResource BackgroundColors}"
    TitleColor="White"
    UnselectedColor="{DynamicResource BackgroundColors}">
    <TabBar>
        <Tab Title="Точки" Icon="ic_perm_identity_black_24dp.png">
            <ShellContent>
                <local:ShopListPage />
            </ShellContent>
        </Tab>

        <Tab Title="Администрирование" Icon="ic_perm_identity_black_24dp.png">
            <ShellContent>
                <local:StuffPage />
            </ShellContent>
        </Tab>

        <Tab Title="Моб.покупки" Icon="news_16_png.png">
            <ShellContent>
                <local:MobileTansactionsPage />
            </ShellContent>
        </Tab>

        <Tab Title="Профиль" Icon="ic_myprofile_16.png">
            <ShellContent>
                <local:MyProfilePage />
            </ShellContent>
        </Tab>

        <Tab Title="Настройки" Icon="ic_build_black_24dp.png">
            <ShellContent>
                <local:SettingsPage />
            </ShellContent>
        </Tab>
    </TabBar>
</Shell>