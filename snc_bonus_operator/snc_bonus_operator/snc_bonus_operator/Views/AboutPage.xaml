<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="snc_bonus_operator.AboutPage"
             Title="О приложении">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <Frame CornerRadius="10" BackgroundColor="{DynamicResource BackgroundColor}" HasShadow="False"
                       Margin="10">
                    <StackLayout VerticalOptions="StartAndExpand">
                        <Image Source="splash_logo.bmp" HorizontalOptions="CenterAndExpand"/>
                        <Label x:Name="version" Style="{DynamicResource UsualLabelStyle}"
                                  HorizontalTextAlignment="Center"/>

                        <Button x:Name="wrightToDeveloper" Style="{DynamicResource DigitButtonStyle}" Text="Написать разработчикам" 
                                    Clicked="wrightToDeveloper_Clicked"/>
                    </StackLayout>
                </Frame>

                <Label x:Name="copyright" Style="{DynamicResource UsualLabelStyle}"
                   HorizontalTextAlignment="Start"
                   VerticalOptions="EndAndExpand"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>